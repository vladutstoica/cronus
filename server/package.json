{
  "name": "server",
  "version": "1.0.0",
  "description": "Bun + tRPC + MongoDB backend",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "tsc",
    "start": "bun run ./dist/index.js",
    "tsc:build": "tsc --outDir ./dist_tsc",
    "node:start": "node ./dist_tsc/index.js",
    "1--------------------------------": "--------------------------------",
    "test": "rm -rf ./dist && bun test",
    "test:categorization": "bun test src/services/categorization/categorizationService.test.ts",
    "test:categorization:edgecases": "bun test src/services/categorization/categorizationService-edgecases.test.ts",
    "test:categorization:edgecases2": "bun test src/services/categorization/categorizationService-edgecases2.test.ts",
    "test:categorization:all": "bun run test:categorization && bun run test:categorization:edgecases && bun run test:categorization:edgecases2",
    "1.1--------------------------------": "--------------------------------",
    "test:reset_categories": "bun test src/services/category-resetting/resetCategories.test.ts",
    "test:multi-purpose-apps": "bun test src/services/categorization/multiPurposeApps.test.ts",
    "test:category-suggestions": "bun test src/services/categorization/categorySuggestionService.test.ts",
    "test:suggestions": "bun test src/services/suggestions/suggestionGenerationService.test.ts",
    "test:history": "bun test src/services/categorization/history.test.ts",
    "test:move": "bun test src/services/move/updateEventCategoryInDateRange.test.ts",
    "2--------------------------------": "--------------------------------",
    "script:reset-activity-events": "bun run src/seeder/activity-events-reset.ts",
    "script:reset-activity-events:prod": "NODE_ENV=production bun run src/seeder/activity-events-reset.ts",
    "script:count-events-for-day": "NODE_ENV=production bun run src/seeder/count-events-for-day.ts",
    "cron:generate-suggestions": "bun src/scripts/generateSuggestions.ts",
    "cron:churn-prevention": "bun src/scripts/churnPrevention.ts",
    "debug:env": "bun --print process.env"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.504.0",
    "@aws-sdk/s3-request-presigner": "^3.504.0",
    "@trpc/server": "^10.45.0",
    "@types/jsonwebtoken": "^9.0.8",
    "shared": "workspace:*",
    "aws-sdk": "^2.1692.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "google-auth-library": "^9.15.1",
    "googleapis": "^150.0.1",
    "jsonwebtoken": "^9.0.2",
    "loops": "^5.0.1",
    "mongoose": "^8.1.1",
    "openai": "^4.103.0",
    "sitemap": "^8.0.0",
    "slugify": "^1.6.6",
    "stripe": "^17.7.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.11.16",
    "@types/stripe": "^8.0.417",
    "@types/uuid": "^9.0.8",
    "typescript": "^5.3.3"
  }
}
