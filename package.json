{
  "name": "cronus",
  "version": "2.0.0",
  "private": true,
  "description": "Privacy-first local time tracking desktop app",
  "workspaces": [
    "electron-app"
  ],
  "scripts": {
    "dev": "bun --filter cronus-electron-app dev",
    "rebuild:electron:arm": "bun --filter cronus-electron-app native-modules:rebuild:arm",
    "build": "cd electron-app && bun run build",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/bun": "^1.2.5",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "electron": "35.1.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.5.3"
  },
  "dependencies": {},
  "resolutions": {},
  "overrides": {
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0"
  }
}
